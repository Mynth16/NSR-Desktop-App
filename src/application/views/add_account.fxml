<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.controllers.AddAccountController"
      spacing="16" style="-fx-background-color: #fcfaf6; -fx-padding: 32; -fx-border-radius: 12; -fx-background-radius: 12;">
    <Label text="Add New Account" style="-fx-text-fill: #217a1d;">
        <font><Font name="System Bold" size="26"/></font>
    </Label>
    <VBox spacing="6">
        <Label text="Username *" />
        <TextField fx:id="usernameField" promptText="Enter username" />
        <Label text="3-30 characters, letters, numbers, and underscores only" style="-fx-font-size: 11; -fx-text-fill: #888;" />
    </VBox>
    <VBox spacing="6">
        <Label text="Password *" />
        <HBox spacing="4">
            <PasswordField fx:id="passwordField" promptText="Enter password" HBox.hgrow="ALWAYS" />
            <Button fx:id="showPasswordBtn" text="ðŸ‘" focusTraversable="false" />
        </HBox>
        <Label fx:id="passwordStrengthLabel" text="Password strength: -" style="-fx-font-size: 11; -fx-text-fill: #888;" />
        <ProgressBar fx:id="passwordStrengthBar" progress="0" prefWidth="200" style="-fx-accent: #28a745;" />
        <Label text="Minimum 8 characters with at least one letter and one number" style="-fx-font-size: 11; -fx-text-fill: #888;" />
    </VBox>
    <VBox spacing="6">
        <Label text="Role *" />
        <ComboBox fx:id="roleCombo" promptText="Select role..." />
    </VBox>
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="cancelBtn" text="Cancel" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 15; -fx-background-radius: 8;" />
        <Button fx:id="createBtn" text="Create Account" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 15; -fx-background-radius: 8; -fx-font-weight: bold;" />
    </HBox>
</VBox>
